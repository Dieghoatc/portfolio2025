---
import Layout from "@/layouts/Layout.astro";

import imageHeader from "@/assets/photos/manly_beach.avif";
import profilePhoto from "@/assets/photos/profile.avif";
import Github from "@/assets/github.svg";
import Linkedin from "@/assets/linkedin.svg";
---

<Layout>
  <main>
    <section class="h-[calc(100vh-250px)] grid grid-rows-3">
      <div class="row-span-3">
        <img
          src={imageHeader.src}
          alt="Manly Beach"
          class="img w-full h-full object-cover"
        />
      </div>
      <div class="row-span-1 flex flex-col items-center justify-center">
        <div
          class="border-2 border-amber-300 rounded-full w-36 h-36 overflow-hidden"
        >
          <img
            src={profilePhoto.src}
            alt="Profile"
            class="profile w-full h-full object-cover"
          />
        </div>
        <div class="flex flex-col items-center text-white">
          <h1 class="text-2xl font-bold">Dieghoatc</h1>
          <p class="text-xl">Software Developer</p>
          <div class="flex gap-4 mt-4">
            <div>
              <a href="https://github.com/Dieghoatc" target="_blank"
                ><img src={Github.src} alt="github" class="w-6" /></a
              >
            </div>
            <div>
              <a href="https://www.linkedin.com/in/dieghoatc/" target="_blank"
                ><img src={Linkedin.src} alt="linkedin" class="w-6" /></a
              >
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .img {
    mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
  }
</style>
